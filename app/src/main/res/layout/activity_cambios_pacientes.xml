<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:paddingTop="40dp"
    android:background="#849DB2">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTituloCambiosPac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Editar Paciente"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SSN -->
    <EditText
        android:id="@+id/cajaSSN_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/caja_modern_gris"
        android:hint="SSN del Paciente"
        android:paddingStart="12dp"
        android:textColor="#1A2A3A"
        android:textColorHint="#5A6B7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTituloCambiosPac" />

    <!-- BOTÓN BUSCAR -->
    <Button
        android:id="@+id/btnBuscarPac_Cambios"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_redondo"
        android:onClick="buscarPacienteCambios"
        android:text="Buscar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cajaSSN_Pac" />

    <!-- NOMBRE -->
    <EditText
        android:id="@+id/cajaNombre_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/caja_modern_gris"
        android:hint="Nombre"
        android:paddingStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuscarPac_Cambios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- APELLIDO PATERNO -->
    <EditText
        android:id="@+id/cajaPaterno_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/caja_modern_gris"
        android:hint="Apellido Paterno"
        android:paddingStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cajaNombre_Pac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- APELLIDO MATERNO -->
    <EditText
        android:id="@+id/cajaMaterno_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/caja_modern_gris"
        android:hint="Apellido Materno"
        android:paddingStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cajaPaterno_Pac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EDAD -->
    <EditText
        android:id="@+id/cajaEdad_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/caja_modern_gris"
        android:hint="Edad"
        android:inputType="number"
        android:paddingStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cajaMaterno_Pac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tvNombreMedico_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:padding="6dp"
        android:text="Nombre del médico"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cajaEdad_Pac" />

    <!-- SPINNER SSN MÉDICO CABECERA -->
    <Spinner
        android:id="@+id/spinnerSSNMedCab_Pac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/caja_modern_gris"
        app:layout_constraintTop_toBottomOf="@id/tvNombreMedico_Pac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN GUARDAR -->
    <Button
        android:id="@+id/btnGuardarCambiosPac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/boton_redondo"
        android:onClick="guardarCambiosPaciente"
        android:text="Guardar Cambios"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerSSNMedCab_Pac" />

    <!-- REGRESAR -->
    <Button
        android:id="@+id/btnRegresarCambiosPac"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_redondo"
        android:onClick="regresar"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGuardarCambiosPac" />

</androidx.constraintlayout.widget.ConstraintLayout>
