<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#F1F5F9">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/fondo_item">

        <!-- ICONO IZQUIERDO -->
        <ImageView
            android:id="@+id/iconPaciente"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"
            android:padding="10dp"/>

        <!-- CONTENIDO TEXTO -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- SSN -->
            <TextView
                android:id="@+id/txtSSN_Paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSN: 000000"
                android:textColor="#1A2A3A"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <!-- NOMBRE COMPLETO -->
            <TextView
                android:id="@+id/txtNombreCompleto_Paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez López"
                android:textColor="#1A2A3A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <!-- EDAD -->
            <TextView
                android:id="@+id/txtEdad_Paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad: 25 años"
                android:textColor="#4A5568"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- MÉDICO DE CABECERA -->
            <TextView
                android:id="@+id/txtMedicoCabecera_Paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médico Cabecera (SSN): 123456"
                android:textColor="#4A5568"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- LÍNEA DECORATIVA -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#1A2A3A"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
